<Page x:ConnectionId='1'
    x:Name="MainPg"
    x:Class="Kloc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kloc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid x:ConnectionId='2' Name="Base" 
              Background="#55FFFFFF"
                                                           >
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:ConnectionId='3' Name="Date"
                           HorizontalAlignment="Center"
                           FontFamily="SpoqaHanSans" FontSize="50" FontWeight="ExtraBold"
                           Foreground="#CC000000"
                           Text="1111/11/11"/>
                <TextBlock x:ConnectionId='4' Name="Time"
                           HorizontalAlignment="Center"
                           FontFamily="SpoqaHanSans" FontSize="170" FontWeight="ExtraBold"
                           Foreground="#CC000000"
                           Text="11:11:11"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

